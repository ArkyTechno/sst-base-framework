{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "paths": {
      "@infra/*": ["./src/infra/*"],
      "@platform/*": ["./src/platform/*"],
      "@services/*": ["./src/services/*"],
    }
  }
}